<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Mapas - Mapeia</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    .map-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }
    .map-item {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
      background: #fff;
      border-radius: 8px;
    }
    iframe {
      width: 100%;
      height: 200px;
      border: none;
      border-radius: 6px;
    }
    .map-item a {
      display: block;
      margin-top: 10px;
      text-decoration: none;
      color: #1a73e8;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Mapas Dispon√≠veis</h1>
  <div class="map-grid">
    <% mapas.forEach(function(mapa) { %>
      <div class="map-item">
        <iframe src="/mapaFiles/<%= mapa %>"></iframe>
        <a href="/mapaFiles/<%= mapa %>" target="_blank"><%= mapa %></a>
      </div>
    <% }); %>
  </div>
  <br>
  <a href="/logout">Logout</a>
</body>
</html>
