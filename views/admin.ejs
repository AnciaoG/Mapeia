<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Admin - Controle - Mapeia</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>Área do Administrador</h1>
  </header>

  <main>
    <!-- Usuários Cadastrados -->
    <section class="usuarios-section">
      <h2>Usuários Cadastrados</h2>
      <table class="usuarios-table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Data/Hora do Cadastro</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% usuarios.forEach(u => { %>
            <tr>
              <td><%= u.nome %></td>
              <td><%= u.email %></td>
              <td><%= u.cadastro %></td>
              <td>
                <form action="/admin/excluir/<%= u.id %>" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir este usuário?');">
                  <button type="submit" class="botao-admin excluir">Excluir</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <!-- Ações do Administrador -->
    <section class="acoes-admin">
      <h2>Ações do Administrador</h2>
      <ul>
        <li><a href="/cadastro" class="botao-admin">Cadastrar Novo Usuário</a></li>
        <li><a href="/" class="botao-admin">Home</a></li>
        <li><a href="/logout" class="botao-admin sair">Logout</a></li>
      </ul>
    </section>
  </main>
</body>
</html>
