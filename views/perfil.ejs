<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title><%= isAdmin ? "Admin - Controle" : "Meu Perfil" %> - Mapeia</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1><%= isAdmin ? "Área do Administrador" : "Meu Perfil" %></h1>

  <% if (isAdmin) { %>
    <table>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Data/Hora do Cadastro</th>
      </tr>
      <% usuarios.forEach(u => { %>
        <tr>
          <td><%= u.nome %></td>
          <td><%= u.email %></td>
          <td><%= u.cadastro %></td>
        </tr>
      <% }) %>
    </table>
  <% } else { %>
    <p><strong>Nome:</strong> <%= usuario.nome %></p>
    <p><strong>Email:</strong> <%= usuario.email %></p>
    <p><strong>Data/Hora do Cadastro:</strong> <%= usuario.cadastro %></p>
  <% } %>

  <a href="/logout">Logout</a>
</body>
</html>
